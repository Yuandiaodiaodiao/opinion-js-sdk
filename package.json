{
  "name": "opinion-clob-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Opinion Labs CLOB prediction markets",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node examples/integration-test.js",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "python3 -m http.server 8080 --directory docs/api"
  },
  "keywords": [
    "opinion",
    "clob",
    "prediction-markets",
    "web3",
    "bnb-chain",
    "conditional-tokens"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "decimal.js": "^10.4.3",
    "undici": "^7.2.0",
    "viem": "^2.21.54"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^16.6.1",
    "tsup": "^8.3.5",
    "typedoc": "^0.27.4",
    "typedoc-plugin-markdown": "^4.3.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
